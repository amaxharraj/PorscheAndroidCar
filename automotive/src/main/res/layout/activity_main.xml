<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.auron.porscheprojectcar.MainActivity">

    <ImageView
        android:id="@+id/iv_mic"
        android:layout_width="264dp"
        android:layout_height="206dp"
        android:layout_marginTop="200dp"
        android:contentDescription="@string/mic_description"
        android:src="@drawable/microphone"
        app:layout_constraintBottom_toTopOf="@+id/tv_speech_to_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_speech_to_text"
        android:layout_width="414dp"
        android:layout_height="127dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="@string/tap_mic_and_speak"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_mic" />
</androidx.constraintlayout.widget.ConstraintLayout>
